
h2=`User ${spotlightData.User.username} Spotlight!`
br
section(class='user-header')
    div(class='user-cover-image' style=`background-image: url(${spotBackgroundKey})`)
        div(class='user-profile-image playSong' id=spotMusic style=`background-image: url(${spotProfKey})`)
section(id='latest' class="songCard__section")
    header
        h2=`Searching for something like ${spotlightData.title} by ${spotlightData.User.username}`
        p= `explore NoiseWaves ${spotlightData.genre} selections`
    div(class='songCards')
        each song in sixSongsLikeSpotlight
            div(class='card' title=`${song.User.username}`)
                div(class='card__image playSong' id=song.music title=song.title  style=`background-image: url(${song.User.dataValues.profilePicUrl})`)
                div(class='card__label')
                    div(class='card__label__title ajax-link' title=`${song.User.username}/${song.songLocalPath}`)=song.title
                    div(class='card__label__artist ajax-link' title=`${song.User.username}`)=song.User.username
