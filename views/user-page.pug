div.userPage
    //- section.userHeader
    img.userPage_banner(src=userData.backgroundPic)
    img.userPage_profilePic(src=userData.profilePic)
    div.userPage_name= userData.username

    if !userData.Songs
        div.userUploads This user hasn't uploaded a song yet
    else
        div.userUploads #{userData.username}'s Uploads:
        //- lets put this in a flex container
        each song in userData.Songs
            section.userPage_song(class='song-wrapper')
                    section(class='song-header')
                        div(class='song-image' style=`background-image: url(${userData.profilePic})`)
                        div(class='song-info')
                            div(class='song-name') #{song.title}
                            div(class='artist-name') #{song.artist}



    p User Likes
        if likedSongs
            each likedSong in likedSongs
                div(class='card')
                            div(class='card__image' style=`background-image: url(${likedSong.User.profilePicUrl})`)
                            div(class='card__label')
                                div(class='card__label__album') #{likedSong.title}
                                div(class='card__label__artist') #{likedSong.artist}

