nav(class="navbar sticky")
    ul(class="navbar__col")
        li
            a(href="/" class="logo-link")
                div(class='logo')
        li(class="link-container")
            a(href="/explore" class="ajax") Explore
    if user
        div(id="cover")
            form(class="navbar__col" id="searchbar" method="post" action="/search")
                input(autocomplete="false" name="hidden" type="text" style="display:none;")
                div(class="tb")
                    div(class="td")
                        input(type="search" id="search" placeholder="Search" name="search")
                    div(class="td")
                        button(type="submit" value="Search" id='submit-search' autocomplete='false') <span class="material-icons">search</span>
        ul(class="navbar__col")
            li(class="btn-group")
                button(type="button" class="open-modal" data-open="modal1") Upload
            div(class="modal" id="modal1" data-animation="zoomInOut")
                div(class="modal-dialog")
                    header(class="modal-header") Upload a song
                        button(class="close-modal" aria-label="close modal" data-close) X
                    section(class="modal-content")
                        p.upload-errors
                        form(method="post" class="login-form" action="/songs" enctype="multipart/form-data")
                            label(for="upload-title") Title:&nbsp;&nbsp;
                            input(type="text" id="upload-title" name="title")
                            <br><br>
                            label(for="upload-artist") Artist:&nbsp;&nbsp;
                            input(type="text" id="upload-artist" name="artist")
                            <br><br>
                            label(for="upload-album") Album:&nbsp;&nbsp;
                            input(type="text" id="upload-album" name="album")
                            <br><br>
                            label(for="upload-genre") Genre: &nbsp;&nbsp;
                            select(id="upload-genre" name="genre")
                                option(value='')
                                option(value='Classical') Classical
                                option(value='Electronic') Electronic
                                option(value='Hip Hop') Hip Hop
                                option(value='Indie') Indie
                                option(value='Jazz') Jazz
                                option(value='Rock') Rock
                            <br><br>
                            label(for="upload-songUrl") Song File: &nbsp;&nbsp;
                            input(type="file" name="songUrl" accept=".mp3,.flac" id="upload-songUrl")
                            <br><br>
                            //- label(for="upload-thumbnailUrl") Picture File: &nbsp;&nbsp;
                            //- input(type="file" name="thumbnailUrl" accept=".jpg,.png" for="upload-thumbnailUrl")
                            <br><br>
                            input(type="submit" value="Upload Song")
            li: a.user(href=`/${user.username}` class='ajax')= user.username
            li: a.logout Log Out?
    else
        div(id="cover")
            form(class="navbar__col" id="searchbar" method="post" action="/search")
                input(autocomplete="false" name="hidden" type="text" style="display:none;")
                div(class="tb")
                    div(class="td")
                        input(type="search" id="search" placeholder="Search" name="search")
                    div(class="td")
                        button(type="submit" value="Search" id='submit-search' autocomplete='false') <span class="material-icons">search</span>
                            //- span(class="material-icons") search
        ul(class="navbar__col navbar__col-3")
            li(class="btn-group")
                button(type="button" class="open-modal" data-open="modal1") Sign In
            div(class="modal" id="modal1" data-animation="zoomInOut")
                div(class="modal-dialog")
                    header(class="modal-header") Sign in to your NoiseWave account
                        button(class="close-modal" aria-label="close modal" data-close) X
                    section(class="modal-content")
                        p.login-errors
                        form(method="post" class="login-form" action="/login")
                            label(for="display-name") Username:&nbsp;&nbsp;
                            input(type="text" id="display-name" name="username")
                            <br><br>
                            label(for="password") Password:&nbsp;&nbsp;
                            input(type="password" id="password1" name="password")
                            <br><br>
                            input(type="submit" value="Sign in")
            li(class="btn-group")
                button(type="button" class="open-modal" data-open="modal2") Create Account
            div(class="modal" id="modal2" data-animation="zoomInOut")
                div(class="modal-dialog")
                    header(class="modal-header") Create your NoiseWave account
                        button(class="close-modal" aria-label="close modal" data-close) X
                    section(class="modal-content")
                        ul.signup-errors
                        form(method="post" class="sign-up-form" action="/users" enctype="multipart/form-data")
                            label(for="usernameSignUp") Username:&nbsp;&nbsp;
                            input(type="text" id="usernameSignUp" name="username")
                            <br><br>
                            label(for="emailSignUp") Email:&nbsp;&nbsp;
                            input(type="email" id="emailSignUp" name="email")
                            <br><br>
                            label(for="password2") Password:&nbsp;&nbsp;
                            input(type="password" id="password2" name="password")
                            <br><br>
                            label(for="confirmPassword") Confirm password:&nbsp;&nbsp;
                            input(type="password" id="confirmPassword" name="confirmPassword")
                            <br><br>
                            label(for="profilePicUrl") Profile Picture
                            input(type="file", name="profilePic" accept='.jpg,.png')
                            input(type="submit" value="Get Started")
                    footer(class="modal-footer") By signing up I accept the Terms of Use. I have read and understood the Privacy Policy and Cookies Policy.
    li
        div(class="dropdown")
            button(class="dropbtn") &bull; &bull; &bull;
            div(class="dropdown-content")
                a(class="dropdown-link" href="https://github.com/DaedalusG/NoiseWave" target="_blank") GitHub
                a(class="dropdown-link" href="#") Link 2
                a(class="dropdown-link" href="#") Link 3
